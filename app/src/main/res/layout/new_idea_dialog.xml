<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:gravity="center_horizontal">

    <mbtkerteam.com.engvolunteered.Assistant.MyTextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/TopicTxt"
        android:text="اضافة فكرة جديدة"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        android:background="@color/top_bar_bg_color"
        android:textColor="#fff"/>

    <mbtkerteam.com.engvolunteered.Assistant.MyEditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="العنوان"
        android:id="@+id/NameTxt"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:background="@drawable/gradient_edit_text"
        android:textColor="@color/black"/>

    <mbtkerteam.com.engvolunteered.Assistant.MyEditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="التفاصيل"
        android:id="@+id/DetailsTxt"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:background="@drawable/gradient_edit_text"
        android:textColor="@color/black"/>

    <mbtkerteam.com.engvolunteered.Assistant.MyButtonMedium
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/CreateButton"
        android:text="ارسال"
        android:textStyle="bold"
        android:paddingBottom="3dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_style"
        android:textSize="16dp"/>

</LinearLayout>
