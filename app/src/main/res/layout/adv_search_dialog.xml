<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:gravity="center_horizontal">

    <mbtkerteam.com.engvolunteered.Assistant.MyTextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="بحث متقدم"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        android:background="@color/top_bar_bg_color"
        android:textColor="#fff"/>


    <com.skydoves.powerspinner.PowerSpinnerView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/CityEditTxt"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.2dp"
        app:spinner_arrow_padding="8dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_arrow_tint="@color/top_bar_bg_color"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:textAlignment="center"
        android:hint="اختر المدينة .."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:background="@drawable/gradient_edit_text"/>

    <com.skydoves.powerspinner.PowerSpinnerView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/GanderEditTxt"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.2dp"
        app:spinner_arrow_padding="8dp"
        android:padding="5dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_arrow_tint="@color/top_bar_bg_color"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:hint="اختر الجنس .."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:background="@drawable/gradient_edit_text"/>

    <com.skydoves.powerspinner.PowerSpinnerView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/FiledEditTxt"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.2dp"
        app:spinner_arrow_padding="8dp"
        android:padding="5dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_arrow_tint="@color/top_bar_bg_color"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:hint="اختر المجال .."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:background="@drawable/gradient_edit_text"/>


    <mbtkerteam.com.engvolunteered.Assistant.MyButtonMedium
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/SearchButton"
        android:text="بـحـث"
        android:textStyle="bold"
        android:paddingBottom="3dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_style"
        android:textSize="16dp"/>

</LinearLayout>
