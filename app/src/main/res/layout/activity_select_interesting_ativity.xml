<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectInterestingAtivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#FFF6BD"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="left">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <mbtkerteam.com.engvolunteered.Assistant.MyButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:onClick="SkipButton"
            android:gravity="center"
            android:background="@drawable/gradient_color_butt"
            android:text="تخطي"
            android:textSize="28dp"
            android:textColor="#757575"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_notifi"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <mbtkerteam.com.engvolunteered.Assistant.MyTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختر اهتماماتك .."
                android:textColor="#ffffff"
                android:textSize="38dp"/>

            <mbtkerteam.com.engvolunteered.Assistant.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سنعرض لك ما يهمك اولاً"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ItemsLayout"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:background="#00F5F5F5"
                    android:id="@+id/CategoriesListView"/>

            </LinearLayout>

            <mbtkerteam.com.engvolunteered.Assistant.MyButton
                android:layout_width="230dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="90dp"
                android:onClick="ContinueButton"
                android:text="استمرار"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:background="@drawable/burder_button"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>