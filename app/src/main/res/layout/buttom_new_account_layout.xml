<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_sheet">

    <mbtkerteam.com.engvolunteered.Assistant.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TopicTxt"
        android:text="آختر .."
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <mbtkerteam.com.engvolunteered.Assistant.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EngAccountButton"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="انشاء حساب متطوع جديد"
            android:background="@drawable/button_style"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <mbtkerteam.com.engvolunteered.Assistant.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/OrganisationAccountButton"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="جهة موفرة فرص تطوعية"
            android:background="@drawable/button_style"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>



    </LinearLayout>


</LinearLayout>