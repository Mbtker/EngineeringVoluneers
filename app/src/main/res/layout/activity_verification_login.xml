<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationLoginActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/verification_code"/>

            <mbtkerteam.com.engvolunteered.Assistant.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تم ارسال كود التحقق على الجوال رقم "
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="@color/text_color"/>

            <mbtkerteam.com.engvolunteered.Assistant.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PhoneTxt"
                android:text="05566491219"
                android:textSize="17dp"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="@color/text_color"/>

            <mbtkerteam.com.engvolunteered.Assistant.MyEditText
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:id="@+id/CodeEditTxt"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:hint="الكود"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="phone"
                android:background="@drawable/gradient_edit_text"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxHeight="25dip"
                android:minHeight="25dip"
                android:minWidth="25dip"
                android:maxWidth="25dip"
                android:visibility="invisible"
                android:indeterminateTint="@color/purple_200"/>

            <mbtkerteam.com.engvolunteered.Assistant.MyButton
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:onClick="ContinueButton"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_style"
                android:text="استمرار"
                android:textSize="14dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>